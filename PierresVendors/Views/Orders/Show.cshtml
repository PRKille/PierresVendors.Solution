@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h3>Order Details:</h3>
</div>
<div class="card">
  <h4>@Model["orders"].Title</h4>
  <h5>@Model["orders"].Description</h5>
  <h5>$@Model["orders"].Price</h5>
  @if (Model["orders"].Reoccurring == "true")
  {
    <h5>@Model["orders"].Day every week.</h5>
  }
  else
  {
    <h5>@Model["orders"].Day.</h5>
  }
  <form action='/vendors/@Model["vendor"].Id/orders/@Model["orders"].Id' method="post">
  <input type="hidden" name="orderID" value='@Model["orders"].Id'>
  <input type="hidden" name="vendorID" value='@Model["vendor"].Id'>
  <button type="submit">Delete Order</button>
  </form>
</div>